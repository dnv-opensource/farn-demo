{
    "_environment": {
        "CASEDIR": "cases",
        "DUMPDIR": "dump",
        "LOGDIR": "logs",
        "RESULTDIR": "results",
        "TEMPLATEDIR": "template"
    },
    "_layers": {
        "lhsVar": {
            "_sampling": {
                "_type": "uniformLhs",
                "_names": [
                    "minuend",
                    "subtrahend",
                    "dividend"
                ],
                "_ranges": [
                    [
                        -10,
                        10
                    ],
                    [
                        -10,
                        10
                    ],
                    [
                        -20,
                        20
                    ]
                ],
                "_includeBoundingBox": true,
                "_numberOfSamples": 20
            },
            "_comment": "lhs sampling demo case dividend / (minuend - subtrahend) and filtering avoiding div_by_zero",
            "_condition": {
                "_action": "exclude",
                "_filter": "minuend - subtrahend == 0"
            },
            "_commands": {
                "prepare": [
                    "copy %TEMPLATEDIR%\\caseDict.json .",
                    "copy %TEMPLATEDIR%\\winjob.cmd .",
                    "dictParser caseDict.json -o json --log logs\\dictParser.log --log-level INFO",
                    "ospCaseBuilder parsed.caseDict.json --log logs\\ospCaseBuilder.log --log-level INFO"
                ],
                "run": [
                    "cosim run OspSystemStructure.xml -b 0 -d 10"
                ],
                "runjob": [
                    ".\\winjob.cmd"
                ],
                "post": [
                    "watchCosim watchDict -pd --log logs\\watchCosim.log --log-level INFO"
                ]
            }
        }
    }
}